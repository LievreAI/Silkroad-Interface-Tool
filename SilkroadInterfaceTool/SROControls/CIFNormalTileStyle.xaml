<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sroControls="clr-namespace:SilkroadInterfaceTool.SROControls">
    <Style TargetType="sroControls:CIFNormalTile">
        <Setter Property="Template">
            <Setter.Value>
                <!-- TODO: Silkroad does repeat the Tile texture if Control > Tile size , the current method stretches it !-->
                <ControlTemplate TargetType="sroControls:CIFNormalTile">
                    <Rectangle Width="{TemplateBinding ActualWidth}" Height="{TemplateBinding ActualHeight}">
                        <Rectangle.Fill>
                            <ImageBrush ImageSource="/Textures/Tiles/com_bg_tile_b.png" />
                        </Rectangle.Fill>
                    </Rectangle>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>