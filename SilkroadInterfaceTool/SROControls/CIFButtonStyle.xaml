<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sroControls="clr-namespace:SilkroadInterfaceTool.SROControls">
    
    <Style TargetType="sroControls:CIFButton">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="sroControls:CIFButton">
                    <Rectangle Width="{TemplateBinding ActualWidth}" Height="{TemplateBinding ActualHeight}">
                            <Rectangle.Fill>
                                <ImageBrush ImageSource="/Textures/sys_button.png" />
                            </Rectangle.Fill>
                        </Rectangle>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>